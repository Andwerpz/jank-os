
void panic(u8* msg) {
    print("panic : ");
    print(msg);
    print("\n");
    while(1) {
        asm!("hlt");
    }
}

void panic() {
    panic("no message");
}

//'panic assert'
void assert(i32 val, u8* msg) {
    if(!val) panic(msg);
}

void assert(u64 val, u8* msg) {
    if(!val) panic(msg);
}

void assert(i32 val) {
    if(!val) panic();
}

void assert(u64 val) {
    if(!val) panic();
}