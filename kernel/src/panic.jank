#include "serial.jank";

void panic(u8* msg) {
    serial_print("panic : ");
    serial_print(msg);
    serial_print("\n");
    while(1) {
        asm!("hlt");
    }
}

void panic() {
    panic("panic");
}

//'panic assert'
void passert(i32 val, u8* msg) {
    if(!val) panic(msg);
}

void passert(u64 val, u8* msg) {
    if(!val) panic(msg);
}